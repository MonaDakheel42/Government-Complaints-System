generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  phone       String    @unique
  password    String
  isActive    Boolean   @default(false)
  otpCode     String?
  otpExpiresAt DateTime?
  otpAttempts Int       @default(0)
  refreshTokenHash String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Employee {
  id                 Int      @id @default(autoincrement())
  firstName          String
  fatherName         String
  lastName           String
  email              String   @unique
  password           String
  isActive           Boolean  @default(true)
  governmentEntityId Int
  refreshTokenHash   String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  GovernmentEntity GovernmentEntity @relation(fields: [governmentEntityId], references: [id])
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  refreshTokenHash String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GovernmentEntity {
  id           Int    @id @default(autoincrement())
  name         String
  contactEmail String @unique
  description  String
  governorate  String

  employees Employee[]
}
